import static com.kms.katalon.core.testcase.TestCaseFactory.findTestCase
import static com.kms.katalon.core.testdata.TestDataFactory.findTestData
import static com.kms.katalon.core.testobject.ObjectRepository.findTestObject
import internal.GlobalVariable as GlobalVariable
import com.kms.katalon.core.testcase.TestCase as TestCase
import com.kms.katalon.core.testdata.TestData as TestData
import com.kms.katalon.core.testobject.TestObject as TestObject
import com.kms.katalon.core.webui.keyword.WebUiBuiltInKeywords as WebUI

// Mở trình duyệt và điều hướng đến trang web
WebUI.openBrowser('')
WebUI.navigateToUrl(GlobalVariable.BaseUrl + '/auth/login')

// Đăng nhập với tài khoản hợp lệ
WebUI.setText(findTestObject('Page_Login/input_Email'), 'thienthen')
WebUI.setEncryptedText(findTestObject('Page_Login/input_Password'), '123')
WebUI.click(findTestObject('Page_Login/btn_Login_Submit'))

// Chờ đăng nhập thành công
WebUI.waitForPageLoad(30)

// Điều hướng đến trang orders
WebUI.navigateToUrl(GlobalVariable.BaseUrl + '/orders')

// Chờ trang load hoàn tất
WebUI.waitForPageLoad(30)

// Nhấp vào xem chi tiết order đầu tiên
WebUI.click(findTestObject('Page_Orders/btn_View_Details_First_Order'))

// Chờ trang chi tiết order load
WebUI.waitForPageLoad(30)

// Xác minh thông tin chi tiết order
WebUI.verifyElementPresent(findTestObject('Page_Order_Details/text_Order_Number'), 10)
WebUI.verifyElementPresent(findTestObject('Page_Order_Details/text_Order_Date'), 10)
WebUI.verifyElementPresent(findTestObject('Page_Order_Details/text_Order_Total'), 10)
WebUI.verifyElementPresent(findTestObject('Page_Order_Details/list_Order_Items'), 10)

// Chụp màn hình để làm bằng chứng
WebUI.takeScreenshot()

// Đóng trình duyệt
WebUI.closeBrowser()